<%= form_for(@message , html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">名前</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="message_age" class="col-sm-2 control-label">年齢</label>
    <div class="col-sm-4">
      <%= f.text_field :age, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="message_body" class="col-sm-2 control-label">内容</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  
  <%= f.submit class: "btn btn-primary pull-right" %>

<% end %>